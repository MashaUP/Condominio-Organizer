<div class="container">
    <br>
    <p id="notice"><%= notice %></p>

    <h1>Entra tramite codice...</h1>
        <%= form_with url: '/enter', method: :post do |form| %>
            <%= form.label :codice, "Codice d'invito:" %>
            <%= form.text_field :codice %>
            <%= form.submit "Entra" %>
        <% end %>
    <br>

    <h1>...oppure cerca il tuo condominio</h1>

    <br/>
    <div class="row gx-5">
    <div class="col-2">
    <%= form_with url: '/enter', method: :get do |form| %>
        <div class="row py-2">
        <%= form.label :città, "Città:" %>
        <%= form.text_field :città %>
         </div>
        <div class="row py-2">
        <%= form.label :distanza, "Distanza (in kilometri):" %>
        <%= form.select :distanza, [10,50,100], selected: 100 %>
        </div>
        <div class="row py-2">
        <%= form.submit "Cerca" %>
         </div>
    <% end %>
    </div>
    <div class="col-6">
    <table>
    <thead>
        <tr>
        <th>Banner</th>
        <th>Nome</th>
        <th>Comune</th>
        <th>Indirizzo</th>
        <th colspan="3"></th>
        </tr>
    </thead>

    <tbody>
        <% @condominios.each do |condominio| %>
        <tr>
            <td>  
                <% if condominio.avatar.present? %>
                    <%= image_tag(condominio.avatar.variant(resize_to_fill: [150, 50])) %>
                <% else %>
                    <%= image_tag("banner.png", width: 150, height: 50) %>
                <% end %>
            </td>
            <td><%= condominio.nome %></td>
            <td><%= condominio.comune %></td>
            <td><%= condominio.indirizzo %></td>
            <td> 
                <%= form_with url: '/enter', method: :get do |f| %>
                    <%= f.hidden_field :some_column %>
                    <%= hidden_field_tag 'selected', 'none'  %>
                    <%= f.submit "Richiedi accesso", :class => "btn btn-primary" %>
                <% end %>
            </td>
        </tr>
        <% end %>
    </tbody>
    </table>
    </div>
    </div>
</div>

