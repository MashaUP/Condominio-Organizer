<%= form_with(model: post) do |form| %>
  <% if post.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(post.errors.count, "errore",plural:"errori") %> hanno impedito di creare il post:</h2>

      <ul>
        <% post.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>

  <div class="field">
    <%= form.label :body %>
    <%= form.text_area :body %>
  </div>

  <div class="field">
    <%= form.label :user_id %>
    <%= form.hidden_field :user_id %>
  </div>

  <div class="field">
    <%= form.label :condominio_id %>
    <%= form.hidden_field :condominio_id %>
  </div>

  <div class="actions">
    <%= form.submit "Crea Post",:class => "btn btn-primary"%>
  </div>
<% end %>
