<div class="container">
  <br>
  <p id="notice"><%= notice %></p>

  <h1>Richieste d'accesso</h1>

  <table>
    <thead>
      <tr>
        <th>Condominio</th>
        <th>User</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @requests.each do |request| %>
        <tr>
          <td><%= Condominio.find_by(id:request.condominio_id).nome %></td>
          <td><%= User.find_by(id:request.user_id).uname %></td>
          <td><%= link_to 'Show', request %></td>
          <td><%= link_to 'Destroy', request, method: :delete, data: { confirm: 'Sei sicuro?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'Nuova richiesta', '/enter' %>
</div>
